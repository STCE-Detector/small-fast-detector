{
  "name": "qualitative",

  "tracker_name": "Hybrid_Sort",

  "source_weights_path": "./detectors/8sp2_150.pt",
  "source_stream_path": "/Users/inaki-eab/Desktop/TAR_data/selection/11.mp4",

  "device": "mps",
  "fps_reduction": 20,

  "save_dir": "./outputs/",
  "save_results": false,
  "save_video": false,
  "display": false,
  "stabilize": false,
  "logging": false,
  "stream_mode": false,
  "compression_mode": true,

  "img_size": 640,
  "conf_threshold": 0.1,
  "iou_threshold": 0.7,
  "max_det": 50,
  "agnostic_nms": true,

  "tracker_args": {
    "det_thresh": 0.2,
    "max_age": 30,
    "min_hits": 3,
    "iou_threshold": 0.3,
    "delta_t": 3,
    "asso_func": "iou",
    "inertia": 0.2,
    "use_byte": false,
    "TCM_first_step": false,
    "TCM_first_step_weight": 1.0 ,
    "TCM_byte_step": false,
    "TCM_byte_step_weight": 1.0

  },

  "action_recognition": {
    "enabled": false,
    "speed_projection": [0.7, 1.5],
    "_comment": "",

    "gather": {
      "enabled": true,
      "min_people": 2,
      "distance_threshold": 1.0,
      "area_threshold": 0.5,
      "_comment": ""
    },

    "stand_still": {
      "enabled": true,
      "speed_threshold": 0.001,
      "_comment": ""
    },

    "fast_approach": {
      "enabled": true,
      "draw": true,
      "distance_threshold": 4,
      "speed_threshold": 0.005,
      "_comment": ""
    },

    "suddenly_run": {
      "enabled": true,
      "speed_threshold": 0.025,
      "_comment": ""
    },

    "overstep_boundary": {
      "enabled": true,
      "draw": true,
      "line": [0, 0, 1920, 1080],
      "region": "top"
    }
  }
}